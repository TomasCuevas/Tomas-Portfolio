---
// ICONS
import { Icon } from "astro-icon/components";

// INTERFACES
import { type IProject } from "@/interfaces";

// PROPS
interface Props {
  project: IProject;
}

const { project } = Astro.props;
---

<article
  class="group relative flex w-full overflow-hidden rounded-2xl px-6 py-8 shadow-md shadow-purple/20 sm:p-16 md:px-6 md:py-8"
>
  <div class="absolute left-0 top-0 flex h-full w-full overflow-hidden rounded-2xl bg-gray-900">
    <img
      src={project.cover}
      alt="Project cover"
      class="h-full w-full rounded-md object-cover opacity-30 transition-all duration-300 group-hover:scale-110"
    />
  </div>
  <div class="z-10 ml-auto flex flex-col justify-center gap-4">
    <h3 class="text-4xl font-light text-white">
      {project.name}
    </h3>
    <div>
      <p class="flex flex-wrap gap-[3px] font-light leading-7 text-white xs:text-lg">
        {project.description}
      </p>
    </div>
    <div class="flex flex-wrap gap-2">
      {
        project.technologies.map((technologie) => (
          <span class="rounded-md bg-gray-700/50 px-2 py-1 text-xs font-thin tracking-[1px] text-white sm:text-sm">
            {technologie}
          </span>
        ))
      }
    </div>
    <div class="flex items-center justify-end gap-5">
      {
        project.link ? (
          <a href={project.link} target="_blank">
            <Icon name="mdi:navigation-variant-outline" class="text-3xl text-white" />
          </a>
        ) : null
      }
      <a href={project.repository} target="_blank">
        <Icon name="mdi:github" class="text-3xl text-white" />
      </a>
    </div>
  </div>
</article>
