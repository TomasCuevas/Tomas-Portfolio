---
// PROPS
interface Props {
  img: string;
  name: string;
  link: string;
  right?: boolean;
}

const { img, name, link, right = false } = Astro.props;
---

<a href={link} target="_blank">
  <div
    class={`relative group mx-auto flex w-full flex-col items-center justify-center gap-2 rounded-lg bg-gray-400/20 p-2 duration-500 hover:scale-95 dark:bg-light/20 ${right ? "hover:rotate-3" : "hover:-rotate-3"}`}
  >
    <img
      src={img}
      alt={`${name} logo`}
      class="absolute h-20 w-20 scale-[2.2] opacity-0 blur-lg duration-300 group-hover:opacity-30"
    />
    <img
      src={img}
      alt={`${name} logo`}
      class="relative h-16 w-16 object-contain delay-150 duration-500 group-hover:rotate-3 group-hover:scale-110 sm:h-20 sm:w-20 md:h-16"
    />
    <h4 class="text-center font-light text-gray-800 dark:text-white sm:text-lg">
      {name}
    </h4>
  </div>
</a>
